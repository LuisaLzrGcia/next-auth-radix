// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db" // Ruta relativa a tu carpeta prisma
}

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated" // donde quieres que se genere el client
}

// ===================================
// MODELS
// ===================================

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
